<form method="post" action="{{ path('actor_delete', {'id': actor.id}) }}" style="display: inline-block"
    onsubmit="return confirm('Voulez-vous retirer cet acteur?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ actor.id) }}">
    <button class="btn btn-danger">Retirer</button>
</form>