{% extends 'base.html.twig' %}

{% block title %}Gestion des Acteurs{% endblock %}

{% block stylesheets %}
<link href="../../css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css">
<link rel="stylesheet" href="../../css/app.css">
{% endblock %}

{% block body %}
<div class="container">

    <h1 class="titlePage">Gestion des acteurs</h1>


    {% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
    {% endfor %}

    <table class="table">
        <thead>
            <tr>
                <th>Pr√©nom / Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for actor in actors %}
            <tr>
                <td>{{ actor.name }}</td>

                <td>
                    <a href="{{ path('actor_edit', {'id': actor.id}) }}" class="btn btn-success">Modifier</a>
                    {{ include('admin/actor/delete_actor.html.twig') }}
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <!-- Pagination -->
    <div class="col-md-6" style="margin: auto">
        {{ knp_pagination_render(actors) }}
    </div>

    <div class="text-right">
        <a href="{{ path('index') }}" class="btn btn-info">Retour</a>
        <a href="{{ path('actor_new') }}" class="btn btn-primary">Ajouter un acteur</a>
    </div>

</div>
{% endblock %}

{% block javascripts %}
<script src="../../js/anime.min.js"></script>
<script src="../../js/app.js"></script>
<script src="../../js/jquery.min.js"></script>
<script src="../../js/bootstrap.bundle.min.js"></script>
{% endblock %}