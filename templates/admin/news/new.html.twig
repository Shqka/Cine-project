{% extends 'base.html.twig' %}

{% block title %}Créer un article{% endblock %}

{% block stylesheets %}
<link href="../../../css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css">
<link rel="stylesheet" href="../../../css/app.css">
{% endblock %}

{% block body %}
<div class="container">

        <h1 class="titlePage">Créer un article</h1>
    
        {{ form_start(form) }}
    
        <div class="row">
            <div class="col">{{ form_row(form.title) }}</div>
        </div>
    
        <div class="row">
            <div class="col-6">{{ form_row(form.author) }}</div>
            <div class="col-6">{{ form_row(form.created_at) }}</div>
        </div>
    
        <div class="row">
            <div class="col-6">{{ form_row(form.imgone) }}</div>
            <div class="col-6">{{ form_row(form.imgtwo) }}</div>
        </div>
    
        <div class="row">
            <div class="col">{{ form_row(form.abstract) }}</div>
        </div>
    
        <div class="row">
            <div class="col">{{ form_row(form.description) }}</div>
        </div>
    
        {{ form_widget(form) }}
        <button class="btn btn-primary">Enregistrer</button> <br><br>
    
        {{ form_end(form) }}
    
        <a href="{{ path('news_index') }}" class="btn btn-info">Retour au menu</a>
    
    </div>
{% endblock %}

{% block javascripts %}
<script src="../../../js/anime.min.js"></script>
<script src="../../../js/app.js"></script>
<script src="../../../js/jquery.min.js"></script>
<script src="../../../js/bootstrap.bundle.min.js"></script>
{% endblock %}


