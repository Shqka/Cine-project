{% extends 'base.html.twig' %}

{% block title %}Ajouter un élément{% endblock %}
 
{% block body %}

<div class="container">
    
    <h1 class="titlePage">Ajouter un élément</h1>

    {{ form_start(form) }}

    <div class="row">
        <div class="col">{{ form_row(form.genre) }}</div>
        <div class="col">{{ form_row(form.category) }}</div>
    </div>

    <div class="row">
        <div class="col-8">{{ form_row(form.title) }}</div>
        <div class="col-4">{{ form_row(form.createdAt) }}</div>
    </div>

    <div class="row">
        <div class="col-8">{{ form_row(form.director) }}</div>
        <div class="col-4">{{ form_row(form.duration) }}</div>
    </div>

    <div class="row">
        <div class="col-4">{{ form_row(form.image) }}</div>
        <div class="col-4">{{ form_row(form.youtube) }}</div>
        <div class="col">{{ form_row(form.price) }}</div>
    </div>

    <div class="row">
        <div class="col">{{ form_row(form.background) }}</div>
        <div class="col">{{ form_row(form.listimg) }}</div>
    </div>

    {{ form_widget(form) }}
    <button class="btn btn-primary">Enregistrer</button> <br><br>

    {{ form_end(form) }}
    

    <a href="{{ path('index') }}" class="btn btn-info">Retour au menu</a>
</div>

{% endblock %}