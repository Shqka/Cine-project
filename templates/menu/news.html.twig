{% extends 'base.html.twig' %}

{% block title %}Actualités{% endblock %}

{% block body %}

<style>
  #blocNews54:hover {
    -webkit-transform: scale(1.03);
    transform: scale(1.03);
    box-shadow: 0px 10px 25px rgba(0, 0, 0, 0.08);
  }
</style>

<div class="container">

  <h1 class="titlePage reveal-2">Actualités</h1>

  {% for article in news %}

  <!-- Project One -->
  <div class="row reveal-2" id="blocNews54">
    <div class="col-md-6">
      <a href="#">
        <img class="img-fluid rounded mb-3 mb-md-0" src="{{ article.imgone }}" alt="">
      </a>
    </div>
    <div class="col-md-6">

      <h3>{{ article.title }}</h3>

      <p style="color: rgba(0, 0, 0, 0.5);font-size: 14px;font-style:italic; font-weight:600">
        {{ article.createdAt | date('d/m/Y H:i')}}<span style="font-weight: 700;
        font-size: 16px; color:black; font-style:inherit"> {{ article.author }}</span></p>

      <p>{{ article.abstract }}</p>

      <a class="btn btn-primary" href="{{ path('news_show', {'id': article.id}) }}">Lire la suite <i
          class="fas fa-long-arrow-alt-right"></i>
        <span class="glyphicon glyphicon-chevron-right"></span>
      </a>

    </div>
  </div>
  <!-- /.row -->

  <hr>

  {% endfor %}

</div>

<script src="../js/anim-text.js"></script>

{% endblock %}